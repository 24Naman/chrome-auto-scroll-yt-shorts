{
    "manifest_version": 3,
    "name": "YouTube Shorts Auto-Scroller",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/shorts/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "popup.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/yt_scroll_16x16.png",
        "48": "icons/yt_scroll_48x48.png",
        "128": "icons/yt_scroll_128x128.png"
    }
}